#!/usr/bin/env sh
# Execute Husky hooks
. "$(dirname -- "$0")/_/husky.sh"

yarn prettier:fix

lint_output=$(yarn eslint . 2>&1)

# Print the contents of lint_output for debugging
echo "lint_output: >>>$lint_output<<<"

# Check if there are any lint warnings or errors
if echo "$lint_output" | grep -q "warning\|error"; then
  # Print the lint warnings and errors
  echo "âš ï¸ Oops! There are ESLint warnings:"
  echo "$lint_output"
else
  # No lint warnings or errors found
  echo "ğŸ‰ Your code is a work of art! No lint warnings found."
fi